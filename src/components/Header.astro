---
import { SITE } from "@config";
import logoSvg from "@assets/images/logos/logo.svg?raw";

export interface Props {
  activeNav?: "posts" | "tags" | "about" | "search" | "contact";
}

const { activeNav } = Astro.props;
---

<header class="header">
  <a href="/" class="header-logo-link" aria-label={SITE.title}>
    <Fragment set:html={logoSvg} />
  </a>

  <nav class="header-nav">
    <a
      href="/about/"
      class={`nav-link ${activeNav === "about" ? "nav-link--active" : ""}`}
    >
      About
    </a>
    <a
      href="/posts/"
      class={`nav-link ${activeNav === "posts" ? "nav-link--active" : ""}`}
    >
      Blog
    </a>
    <a
      href="/contact/"
      class={`nav-link ${activeNav === "contact" ? "nav-link--active" : ""}`}
    >
      Contact
    </a>
    <a
      href="/search/"
      class={`nav-link ${activeNav === "search" ? "nav-link--active" : ""}`}
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="currentColor"
      >
        <path
          d="M19.023 16.977a35.13 35.13 0 0 1-1.367-1.384c-.372-.378-.596-.653-.596-.653l-2.8-1.337A6.962 6.962 0 0 0 16 9c0-3.859-3.14-7-7-7S2 5.141 2 9s3.14 7 7 7c1.763 0 3.37-.66 4.603-1.739l1.337 2.8s.275.224.653.596c.387.363.896.854 1.384 1.367l1.358 1.392.604.646 2.121-2.121-.646-.604c-.379-.372-.885-.866-1.391-1.36zM9 14c-2.757 0-5-2.243-5-5s2.243-5 5-5 5 2.243 5 5-2.243 5-5 5z"
        ></path>
      </svg>
    </a>
  </nav>

  <span class="header-menu">
    <span id="menu-icon" aria-label="Toggle mobile menu">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="32"
        height="32"
        viewBox="0 0 24 24"
        fill="currentColor"
      >
        <path d="M4 6h16v2H4zm0 5h16v2H4zm0 5h16v2H4z"></path>
      </svg>
    </span>
  </span>
</header>

<!-- Mobile Navigation Menu -->
<nav class="mobile-nav" id="mobile-nav">
  <a
    href="/about/"
    class={`mobile-nav-link ${activeNav === "about" ? "mobile-nav-link--active" : ""}`}
  >
    About
  </a>
  <a
    href="/posts/"
    class={`mobile-nav-link ${activeNav === "posts" ? "mobile-nav-link--active" : ""}`}
  >
    Blog
  </a>
  <a
    href="/contact/"
    class={`mobile-nav-link ${activeNav === "contact" ? "mobile-nav-link--active" : ""}`}
  >
    Contact
  </a>
  <a
    href="/search/"
    class={`mobile-nav-link ${activeNav === "search" ? "mobile-nav-link--active" : ""}`}
  >
    Search
  </a>
</nav>

<script>
  function initMobileNav() {
    const menuIcon = document.getElementById("menu-icon");
    const mobileNav = document.getElementById("mobile-nav");

    if (menuIcon && mobileNav) {
      menuIcon.addEventListener("click", () => {
        mobileNav.classList.toggle("mobile-nav-open");
      });
    }

    // Close mobile nav when clicking a link
    const mobileNavLinks = document.querySelectorAll(".mobile-nav-link");
    mobileNavLinks.forEach(link => {
      link.addEventListener("click", () => {
        if (mobileNav) {
          mobileNav.classList.remove("mobile-nav-open");
        }
      });
    });
  }

  initMobileNav();

  // Runs on view transitions navigation
  document.addEventListener("astro:after-swap", initMobileNav);
</script>
